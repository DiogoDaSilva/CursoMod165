@model IEnumerable<CursoMod165.Models.Appointment>

<h1>Tomorrow's Appointments</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<p>
    <a asp-action="TomorrowAppointments" class="btn btn-primary">Check tomorrow's Appointments</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Staff Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDone)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>No Data</tr>
        }

        @foreach (var appointment in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => appointment.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => appointment.Customer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => appointment.Staff.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => appointment.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => appointment.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => appointment.IsDone)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@appointment.ID">Details</a>
                    <a asp-action="Edit" asp-route-id="@appointment.ID">Edit</a>
                    <a asp-action="Delete" asp-route-id="@appointment.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
